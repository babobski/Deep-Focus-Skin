override moz-icon://stock/gtk-home?size=16              		chrome://DeepFocus/skin/images/folder-open.png
override chrome://global/skin/arrow/arrow-dn.gif        		chrome://global/skin/arrow/arrow-dn-dis.gif
override chrome://global/skin/tree/columnpicker.gif     		chrome://DeepFocus/skin/images/ko_cog_small.png
override chrome://komodo/skin/images/cbox-check.gif     		chrome://DeepFocus/skin/images/checkbox-checked.png
override chrome://komodo/skin/images/boldButton.png     		chrome://DeepFocus/skin/images/bold2.png
override chrome://komodo/skin/images/italicButton.png   		chrome://DeepFocus/skin/images/italic2.png
override chrome://komodo/skin/images/scrollArrowRight.png   	chrome://DeepFocus/skin/images/arrow-right3.png
