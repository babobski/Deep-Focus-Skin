override chrome://komodo/skin/_config/tabs.less         chrome://DeepFocus/skin/_config/tabs.less
override chrome://komodo/skin/_config/panes.less        chrome://DeepFocus/skin/_config/panes.less
override chrome://komodo/skin/_config/modules.less      chrome://DeepFocus/skin/_config/modules.less
override chrome://komodo/skin/_config/icons.less        chrome://DeepFocus/skin/_config/icons.less
override chrome://komodo/skin/_config/menus.less        chrome://DeepFocus/skin/_config/menus.less
override chrome://komodo/skin/_config/scrollbars.less   chrome://DeepFocus/skin/_config/scrollbars.less

# Override LESS rules
override chrome://komodo/skin/window.less               chrome://DeepFocus/skin/window.less
override chrome://komodo/skin/panes.less                chrome://DeepFocus/skin/panes.less
override chrome://komodo/skin/tabs.less                 chrome://DeepFocus/skin/tabs.less
